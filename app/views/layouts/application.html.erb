<!DOCTYPE html>
<html>
  <head>
    <title>WordCross</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <ul>
            <li><%= link_to "Word-Cross", root_path %></li>
            <ul class="menu">
<!--                <li><%= link_to "Settings", settings_path %></li>-->
                <li><%= link_to "メモを見る", '/memos/index' %></li>
                <li><%= link_to "About", about_path %></li>
                <li><%= link_to "Top", root_path %></li>
            </ul>
        </ul>
    </header>
    
    <div><img class="memo-button" src="/assets/memo_icon.png"></div>
    
    
    <div class="memo">
        <%= form_tag "/memos/create" do %>
            <input type="text" name="title" class="memo-title" placeholder="タイトル">
            <input type="text" name="word1" class="word1" value="<%= @keyword %>">
            <span>×</span>
            <input type="text" name="word2" class="word2" placeholder="ワード２">
            <textarea name="content" placeholder="メモ"></textarea>
            <input type="submit" value="保存">
        <% end %>
      </div>
    
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
